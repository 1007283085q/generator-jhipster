{
    "compilerOptions": {
        "target": "es5",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "target/www/app",
        "lib": ["es7", "dom"],
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "./",
        "paths": {
            "app/*": ["src/main/webapp/app/*"]
        },
        "importHelpers": true,
        "allowJs": true
    },
    "include": [
        "src/main/webapp/app/components",
        "src/main/webapp/app/config",
        "src/main/webapp/app/entities/*/*.component.ts",
        "src/main/webapp/app/shared/config.ts",
        "src/main/webapp/app/shared/date/filters.ts",
        "src/main/webapp/app/router/index.ts",
        "src/main/webapp/app/shims-vue.d.ts",
        "src/main/webapp/app/App.component.ts",
        "src/main/webapp/app/constants.ts",
        "src/main/webapp/app/main.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
