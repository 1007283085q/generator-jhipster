import { FormGroup, AbstractControl } from '@angular/forms';

/**
 * Retrieves a child control from form group by the control's name or path.
 * Same as `FormGroup.get` except that returns `AbstractControl` instead of `AbstractControl | null`
 * This function can be used if it's absolutely sure that form control with a given path exists in a given form group.
 *
 * @param formGroup A form group were to search for control.
 * @param path A dot-delimited string or array of string/number values that define the path to the
 * control.
 *
 * @returns form control
 */
export const getFormControlUnchecked = (formGroup: FormGroup, path: Array<string | number> | string): AbstractControl => {
    // eslint-disable-next-line @typescript-eslint/no-non-null-assertion
    return formGroup.get(path)!;
};
