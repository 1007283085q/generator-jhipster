import * as dayjs from 'dayjs';

import { FormatMediumPipe } from 'app/shared/date/format-medium.pipe';

describe('FormatMediumDatePipe', () => {
  const formatMediumPipe = new FormatMediumPipe();

  it('should return an empty string when receive undefined', () => {
    expect(formatMediumPipe.transform(undefined)).toBe('');
  });

  it('should format date like this D MMM YYYY', () => {
    expect(formatMediumPipe.transform(dayjs('2020-11-16').locale('fr'))).toBe('16 Nov 2020 00:00:00');
  });

});
